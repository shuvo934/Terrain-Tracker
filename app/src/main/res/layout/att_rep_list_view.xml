<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/att_report_overall_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1.15">


    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/black" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".21"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/date_0f_att"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:padding="2dp"
            android:textSize="11sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="01-JUN-21"/>
        <TextView
            android:id="@+id/day_name_0f_att"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:padding="2dp"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="(DD)"/>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/black" />
    <LinearLayout
        android:id="@+id/status_of_att_lay"
        android:layout_width="0dp"
        android:layout_weight=".17"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/status_of_att"
            android:layout_width="match_parent"
            android:textSize="11sp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="@color/black"
            android:text="Present\n(LATE)\n(Early)"/>

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/shift_of_att"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".17"
        android:gravity="center"
        android:padding="2dp"
        android:text="General"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="bold" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/black" />
    <TextView
        android:id="@+id/punch_loc_of_att"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@color/black"
        android:layout_weight=".2"
        android:text="Factory"/>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/black" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".2"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/in_time_of_att"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:textSize="11sp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textColor="@color/black"
            android:text="09:05:00 AM"/>
        <Button
            android:id="@+id/in_location"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:padding="1dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="Location"
            android:textSize="9sp"
            />
    </LinearLayout>

<!--    <View-->
<!--        android:layout_width="1dp"-->
<!--        android:layout_height="match_parent"-->
<!--        android:background="@android:color/black" />-->
    <TextView
        android:id="@+id/in_status_of_att"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="2dp"
        android:visibility="gone"
        android:textColor="@color/black"
        android:layout_weight=".09"
        android:text="Late"/>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/black" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".2"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/out_time_of_att"
            android:layout_width="match_parent"
            android:textSize="11sp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textColor="@color/black"
            android:text="05:30:00 pm"/>
        <Button
            android:id="@+id/out_location"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:padding="1dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="Location"
            android:textSize="9sp"
            />


    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/out_status_of_att"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@color/black"
        android:layout_weight=".09"
        android:text="Early"/>





</LinearLayout>
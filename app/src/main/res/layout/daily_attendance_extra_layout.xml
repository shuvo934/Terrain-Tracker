<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_margin="@dimen/_4sdp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/search_division_of_da_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:weightSum="10"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/division_search_card_view_da"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            app:cardElevation="2dp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/statusBarcoloRSecond">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/spinner_layout_division_select_for_da"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxBackgroundColor="@color/white"
                    app:boxBackgroundMode="filled"
                    app:endIconMode="dropdown_menu"
                    app:boxStrokeWidth="0dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="Division"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    tools:ignore="HardcodedText">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/division_select_for_da"
                        style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                        android:layout_width="match_parent"
                        android:text=""
                        android:inputType="text"
                        android:importantForAutofill="no"
                        android:ellipsize="none"
                        android:maxLines="100"
                        android:clickable="true"
                        android:fontFamily="@font/be_vietnam_pro"
                        android:focusable="false"
                        android:textSize="@dimen/_9sdp"
                        android:textColor="@color/black"
                        android:scrollHorizontally="false"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionDone" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/department_search_card_view_da"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_gravity="center"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/statusBarcoloRSecond">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/spinner_layout_department_select_for_da"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxBackgroundColor="@color/white"
                    app:boxBackgroundMode="filled"
                    app:endIconMode="dropdown_menu"
                    app:boxStrokeWidth="0dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:enabled="false"
                    android:hint="Department"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    tools:ignore="HardcodedText">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/department_select_for_da"
                        style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                        android:layout_width="match_parent"
                        android:text=""
                        android:inputType="text"
                        android:importantForAutofill="no"
                        android:ellipsize="none"
                        android:maxLines="100"
                        android:clickable="true"
                        android:fontFamily="@font/be_vietnam_pro"
                        android:focusable="false"
                        android:textSize="@dimen/_9sdp"
                        android:textColor="@color/black"
                        android:scrollHorizontally="false"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionDone" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_emp_of_da_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/search_division_of_da_card_view"
        android:orientation="horizontal"
        android:weightSum="10">

        <androidx.cardview.widget.CardView
            android:id="@+id/search_emp_card_view_da"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:layout_margin="@dimen/_2sdp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/statusBarcoloRSecond">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/spinner_layout_emp_select_for_da"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxBackgroundColor="@color/white"
                    app:boxBackgroundMode="filled"
                    app:endIconMode="dropdown_menu"
                    app:boxStrokeWidth="0dp"
                    android:clickable="true"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="Employee"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    tools:ignore="HardcodedText">

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/emp_select_for_da"
                        style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                        android:layout_width="match_parent"
                        android:text=""
                        android:inputType="text"
                        android:importantForAutofill="no"
                        android:ellipsize="none"
                        android:maxLines="100"
                        android:clickable="true"
                        android:fontFamily="@font/be_vietnam_pro"
                        android:focusable="false"
                        android:textSize="@dimen/_9sdp"
                        android:textColor="@color/black"
                        android:scrollHorizontally="false"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionDone" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables"
            android:background="@drawable/border_design_2">

            <ImageView
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_gravity="center"
                android:src="@drawable/person_24"
                app:tint="@color/lunchScreenBack"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/emp_count_in_da"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans_bold"
                android:text=""
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_below="@+id/search_emp_of_da_card_view">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/previous_month_button_da"
            android:layout_width="48dp"
            android:layout_height="25dp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            app:icon="@drawable/keyboard_arrow_left"
            app:iconTint="@color/white"
            app:iconSize="24dp"
            app:iconPadding="0dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:insetBottom="0dp"
            app:backgroundTint="@color/statusBarcoloRSecond" />

        <TextView
            android:id="@+id/selected_month_name_da"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="OCTOBER, 2023"
            android:textColor="@color/statusBarcoloRSecond"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next_month_button_da"
            android:layout_width="48dp"
            android:layout_height="25dp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            app:icon="@drawable/keyboard_arrow_right"
            app:iconTint="@color/white"
            app:iconSize="24dp"
            app:iconPadding="0dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:insetRight="0dp"
            android:layout_marginStart="@dimen/_5sdp"
            android:insetBottom="0dp"
            app:backgroundTint="@color/statusBarcoloRSecond" />

    </RelativeLayout>

</RelativeLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TerrainTracker" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/statusBarcoloRSecond</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/statusBarcoloRSecond</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:navigationBarColor">@color/statusBarcoloRSecond</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AudioFileInfoOverlayText">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/statusBarcoloRSecond</item>
        <item name="android:textSize">10sp</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NavigationTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="fontFamily">@font/patua_one</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CustomMenuTextFont" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:paddingTop">@dimen/_2sdp</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>
</resources>